{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    // "removeComments": true,
    "experimentalDecorators": true,
    "lib": ["es2016", "dom"]
    // "lib": [
    //   "esnext"
    // ]
  },
  "include": ["packages/**/*.ts", "services/**/*.ts"],
  "exclude": [
    "node_modules/**/*",
    ".serverless/**/*",
    ".webpack/**/*",
    "_warmup/**/*",
    ".vscode/**/*"
  ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
